                                </form>

                                <form action="/test-twitter" method="POST" class="w-full">
                                    <button
                                        class="w-full text-left flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 hover:bg-blue-600 hover:text-white">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                            fill="currentColor">
                                            <path
                                                d="M6.29 18.251C7.802 19.364 9.57 20 11.482 20H13.5C18.17 20 22 16.293 22 11.5c0-.46-.039-.915-.114-1.36a.987.987 0 00-.776-.776c-.445-.075-.9-.114-1.36-.114-4.793 0-8.5 3.829-8.5 8.5V18.25zM12.5 11.5c0-.46-.039-.915-.114-1.36a.987.987 0 00-.776-.776c-.445-.075-.9-.114-1.36-.114-4.793 0-8.5 3.829-8.5 8.5V18.25c1.512 1.113 3.28 1.864 5.192 1.864h2.018c4.67 0 8.368-3.793 8.368-8.5v-.01z"
                                                clip-rule="evenodd" />
                                        </svg>
                                        <span>Twitter Test</span>
                                    </button>
                                </form>
        </nav>
        <div class="p-4 border-t border-gray-700 text-sm text-gray-500 text-center">
            <p>by Förbır Developer Team</p>
        </div>
    </aside>

    <div class="flex-1 flex flex-col overflow-hidden">
        <header class="bg-white shadow-sm p-4 flex justify-between items-center z-10">
            <h1 class="text-2xl font-bold text-gray-700">📋 Link Listesi</h1>
            <% if (user && (user.role==="admin" || user.role==="streamer" || user.role==="user" )) { %>
                <form id="ekleForm" action="/add-link" method="POST" class="flex gap-2 items-center">
                    <input type="text" name="url" placeholder="Yeni link ekle..."
                        class="px-4 py-2 border border-gray-300 rounded-full w-64 focus:ring-2 focus:ring-blue-500 transition-all duration-200">
                    <button type="submit"
                        class="bg-blue-600 text-white font-semibold px-6 py-2 rounded-full shadow-lg hover:bg-blue-700 transition-all duration-200 transform hover:scale-105">
                        Ekle
                    </button>
                </form>
                <% } %>
        </header>

        <main class="flex-1 overflow-y-auto p-6 bg-gray-100">
            <% if (!user) { %>
                <div class="mb-8 p-6 bg-white rounded-xl shadow-lg fade-in">
                    <h2 class="text-xl font-semibold text-gray-700 mb-4">Anonim Link Ekle</h2>
                    <form method="POST" action="/add-link-anon" class="flex gap-2">
                        <input type="text" name="url" placeholder="Link"
                            class="border border-gray-300 p-3 rounded-xl flex-1 focus:ring-2 focus:ring-gray-400 transition-all duration-200">
                        <button type="submit"
                            class="bg-gray-500 text-white font-semibold p-3 rounded-xl shadow-md hover:bg-gray-600 transition-all duration-200">
                            Anonim Ekle
                        </button>
                    </form>
                    <p class="text-sm text-gray-500 mt-4">⚠️ Anonim eklenen linkler 5 dakika sonra silinir.</p>
                </div>
                <% } %>

                    <% if (typeof error !=="undefined" ) { %>
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative mb-4 fade-in"
                            role="alert">
                            <strong class="font-bold">⚠️ Hata:</strong>
                            <span class="block sm:inline ml-2">
                                <%= error %>
                            </span>
                        </div>
                        <% } %>

                            <% if (links && links.length> 0) { %>
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                                    <% links.forEach(link=> { %>
                                        <div
                                            class="group bg-white rounded-2xl shadow-lg p-6 relative transition-transform duration-300 hover:scale-105 hover:shadow-2xl fade-in">

                                            <% if (user && (user.role==="admin" || user.role==="moderator" ||
                                                user.role==="streamer" )) { %>
                                                <form action="/delete-link/<%= link.id %>" method="POST"
                                                    class="absolute top-3 right-3">
                                                    <button
                                                        class="text-gray-400 hover:text-red-600 transition-colors duration-200 transform hover:scale-125">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6"
                                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                        </svg>
                                                    </button>
                                                </form>
                                                <% } %>

                                                    <a href="<%= link.url %>" target="_blank"
                                                        class="text-blue-600 font-bold text-lg leading-snug hover:underline break-words transition-colors duration-200">
                                                        <%= link.url %>
                                                    </a>
                                                    <p class="text-sm text-gray-500 mt-2">
                                                        <span class="flex items-center gap-1">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4"
                                                                viewBox="0 0 20 20" fill="currentColor">
                                                                <path fill-rule="evenodd"
                                                                    d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                                                    clip-rule="evenodd" />
                                                            </svg>
                                                            <%= link.author %>
                                                        </span>
                                                        <span class="flex items-center gap-1 mt-1">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4"
                                                                viewBox="0 0 20 20" fill="currentColor">
                                                                <path
                                                                    d="M2 5a2 2 0 012-2h12a2 2 0 012 2v8a2 2 0 01-2 2h-2.5a1 1 0 00-.8-.4L10 14.5l-2.7-1.9a1 1 0 00-.8.4H4a2 2 0 01-2-2V5z" />
                                                            </svg>
                                                            <%= link.channel %> |
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4"
                                                                    viewBox="0 0 20 20" fill="currentColor">
                                                                    <path fill-rule="evenodd"
                                                                        d="M11.668 10.873c.121.57.545 1.099 1.077 1.631L16 16.398l-1.414 1.414-3.391-3.391c-.532-.532-1.062-.956-1.631-1.077-.184-.038-.363-.07-.547-.07-.557 0-1.082.21-1.49.619l-3.593 3.593c-.09.09-.204.15-.328.188A.993.993 0 013 18a1 1 0 01-1-1v-4c0-.523.21-1.02.586-1.396l3.633-3.633a.993.993 0 011.414 0l1.414 1.414a.993.993 0 001.414 0l.707-.707a.993.993 0 000-1.414l-1.414-1.414a.993.993 0 00-1.414 0L4.586 4.586A.993.993 0 003 4v-1a1 1 0 112 0v1.071c0 .285.114.559.317.762l3.208 3.208c.57.57 1.32.879 2.115.879.805 0 1.554-.319 2.115-.879a.993.993 0 000-1.414l-1.414-1.414a.993.993 0 00-1.414 0l-.707.707a.993.993 0 01-1.414 0z"
                                                                        clip-rule="evenodd" />
                                                                </svg>
                                                                <%= link.source %>
                                                        </span>
                                                    </p>
                                                    <div class="text-xs text-gray-400 mt-4">
                                                        <span class="flex items-center gap-1">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4"
                                                                viewBox="0 0 20 20" fill="currentColor">
                                                                <path fill-rule="evenodd"
                                                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                                                    clip-rule="evenodd" />
                                                            </svg>
                                                            <%= new Date(link.date).toLocaleString("tr-TR") %>
                                                        </span>
                                                    </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } else { %>
                                    <p class="text-gray-500 text-center text-lg mt-12">Henüz hiç link eklenmedi.</p>
                                    <% } %>
        </main>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        socket.on("newLink", (link) => {
            const grid = document.querySelector(".grid");
            if (grid) {
                const card = document.createElement("div");
                card.className = "group bg-white rounded-2xl shadow-lg p-6 relative transition-transform duration-300 hover:scale-105 hover:shadow-2xl fade-in";
                card.innerHTML = `
                    <a href="${link.url}" target="_blank"
                        class="text-blue-600 font-bold text-lg leading-snug hover:underline break-words transition-colors duration-200">
                        ${link.url}
                    </a>
                    <p class="text-sm text-gray-500 mt-2">
                        <span>${link.author}</span> | <span>${link.source}</span>
                    </p>
                    <div class="text-xs text-gray-400 mt-4">
                        ${new Date(link.date).toLocaleString("tr-TR")}
                    </div>
                `;
                grid.prepend(card);
            }
        });
        const menuToggle = document.getElementById('menu-toggle');
        const closeMenu = document.getElementById('close-menu');
        const sidebar = document.getElementById('sidebar');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.remove('-translate-x-full');
            sidebar.classList.add('sidebar-enter-active');
            sidebar.classList.remove('sidebar-leave-active');
        });

        closeMenu.addEventListener('click', () => {
            sidebar.classList.add('sidebar-leave-active');
            sidebar.classList.remove('sidebar-enter-active');
            setTimeout(() => {
                sidebar.classList.add('-translate-x-full');
            }, 300);
        });
    </script>

    <!-- 🔔 Bildirim & Ses -->
    <audio id="ding" preload="auto"
        src="data:audio/wav;base64,UklGRl4AAABXQVZFZm10IBAAAAABAAEAESsAACJWAAACABYAZGF0YQAAAAAAgP8AAP8AgICAf39/f39/f4CAgICAf39/f39/f4CAgP8AAP8A"></audio>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Not: Socket.io zaten server.js’de kurulu (io.emit ile). Burada sadece dinliyoruz.

        // 🔕 Sessiz mod toggle (yerel kayıtta sakla)
        let mute = localStorage.getItem("forbir_mute") === "1";
        function setMute(v) {
            mute = !!v;
            localStorage.setItem("forbir_mute", mute ? "1" : "0");
            const el = document.getElementById("muteToggle");
            if (el) el.textContent = mute ? "🔕 Sessiz" : "🔔 Ses Açık";
        }

        // Header’a küçük bir buton ekleyelim (varsa)
        (function injectMuteButton() {
            const header = document.querySelector("header");
            if (!header || document.getElementById("muteToggle")) return;
            const btn = document.createElement("button");
            btn.id = "muteToggle";
            btn.className = "ml-3 px-3 py-1 rounded border text-sm hover:bg-gray-100";
            btn.onclick = () => setMute(!mute);
            header.appendChild(btn);
            setMute(mute); // label güncelle
        })();

        // 🔔 Bildirim izni iste
        (function ensureNotificationPermission() {
            if (!("Notification" in window)) return;
            if (Notification.permission === "default") {
                // kullanıcıdan bir kere izin iste
                Notification.requestPermission().catch(() => { });
            }
        })();

        // 🔊 Ding çal
        function playDing() {
            if (mute) return;
            const ding = document.getElementById("ding");
            if (!ding) return;
            try {
                ding.currentTime = 0;
                ding.play().catch(() => { /* kullanıcı etkileşimi yoksa sessiz kalabilir */ });
            } catch (e) { }
        }

        // 🪄 Kart üretici (varsa mevcut grid’e prepend eder)
        function prependCard(link) {
            const grid = document.querySelector(".grid");
            if (!grid) return;
            const card = document.createElement("div");
            card.className = "group bg-white rounded-2xl shadow-lg p-6 relative transition-transform duration-300 hover:scale-105 hover:shadow-2xl fade-in";
            card.innerHTML = `
          <a href="${link.url}" target="_blank"
             class="text-blue-600 font-bold text-lg leading-snug hover:underline break-words transition-colors duration-200">
             ${link.url}
          </a>
          <p class="text-sm text-gray-500 mt-2">
            <span>${link.author || "Bilinmiyor"}</span> | <span>${link.source || "-"}</span>
          </p>
          <div class="text-xs text-gray-400 mt-4">
            ${new Date(link.date || Date.now()).toLocaleString("tr-TR")}
          </div>
        `;
            grid.prepend(card);
        }

        // 🖥️ Masaüstü bildirimi
        function desktopNotify(link) {
            if (!("Notification" in window)) return;
            if (Notification.permission !== "granted") return;
            // Sekme arkadaysa bildirim göster
            if (document.hidden) {
                new Notification("Yeni link geldi", {
                    body: `${link.author || "Biri"}: ${link.url}`,
                    icon: "/favicon.ico"
                });
            }
        }

        // 🔌 Socket olayları
        socket.on("newLink", (link) => {
            prependCard(link);
            playDing();
            desktopNotify(link);
        });

        socket.on("deleteLink", (id) => {
            // Basit yaklaşım: sayfayı hafifçe yenileyelim ki grid senkron kalsın
            // (İstersen burada DOM’dan tek kartı seçip kaldıracak bir selector da yazabiliriz.)
            location.reload();
        });

        socket.on("resetLinks", () => {
            location.reload();
        });
    </script>
</body>

